{
  "name": "@step-into-python/client",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -b && vite build",
    "cleanup": "lsof -ti:8080,9099,5001,5173 | xargs kill -9 2>/dev/null || true",
    "dev": "npm run cleanup && concurrently \"npm run emulators\" \"vite\"",
    "deploy": "firebase deploy",
    "emulators": "firebase emulators:start --import=./seed",
    "lint": "eslint .",
    "prebuild": "node devTools/generate-version.ts",
    "preview": "vite preview",
    "test": "vitest run",
    "test:e2e": "npx playwright test",
    "test:firestore": "vitest run --config vitest.firestore.config.ts",
    "test:ui": "vitest --ui --config vitest.all.config.ts"
  },
  "dependencies": {
    "@firebase/rules-unit-testing": "^5.0.0",
    "@tanstack/react-router": "^1.147.1",
    "@tanstack/react-router-devtools": "^1.147.1",
    "firebase": "^12.7.0",
    "node": "^24.12.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-error-boundary": "^6.1.0",
    "react-hook-form": "^7.71.1",
    "react-hot-toast": "^2.6.0",
    "react-icons": "^5.3.0",
    "react-syntax-highlighter": "^16.1.0"
  },
  "devDependencies": {
    "@tanstack/router-plugin": "^1.147.1",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@vitejs/plugin-react": "^5.1.3",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "globals": "^17.0.0",
    "vite": "^7.2.4"
  }
}
